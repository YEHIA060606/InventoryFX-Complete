<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.SupplierController">

    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <HBox spacing="10">
                <Button text="← Retour" onAction="#goBack"
                        style="-fx-background-color:#636e72; -fx-text-fill:white;"/>

                <Label text="Gestion des Fournisseurs"
                       styleClass="title-main"/>
            </HBox>

            <TextField fx:id="searchField"
                       promptText="Rechercher un fournisseur (nom, email, téléphone...)"/>
        </VBox>
    </top>

    <center>
        <TableView fx:id="suppliersTable">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colNom" text="Nom" prefWidth="150"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                <TableColumn fx:id="colTel" text="Téléphone" prefWidth="130"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <TextField fx:id="nomField"  promptText="Nom"/>
            <TextField fx:id="mailField" promptText="Email"/>
            <TextField fx:id="telField"  promptText="Téléphone"/>

            <Button text="Ajouter" onAction="#addSupplier"
                    styleClass="btn-success"/>

            <Button text="Modifier" onAction="#updateSupplier"
                    styleClass="btn-primary"/>

            <Button text="Supprimer" onAction="#deleteSupplier"
                    styleClass="btn-danger"/>
        </HBox>
    </bottom>

</BorderPane>
